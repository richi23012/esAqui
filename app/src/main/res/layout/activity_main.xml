<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F7F7"
    tools:context="com.example.ricardo.esaqui.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#666666"
                android:foregroundGravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@mipmap/appblnco" />

                <TextView
                    android:id="@+id/textasView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Elige una categoria y podras encontrar lo que necesitas, facil y rapido!"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textdfView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="Categorias "
                    android:textColor="@color/colorAccent"
                    android:textSize="22sp" />
            </LinearLayout>

            <TableRow
                android:id="@+id/fer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:background="#ffffff"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerVertical="false"
                    android:layout_marginRight="15dp"
                    android:padding="15dp"
                    app:srcCompat="@mipmap/ferreteria" />

                <TextView
                    android:id="@+id/nombre1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="false"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Ferreteria"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical">

                    <TextView
                        android:id="@+id/ir1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="right"
                        android:text=">"
                        android:textSize="30sp"
                        android:typeface="sans" />
                </RelativeLayout>

            </TableRow>

            <TableRow
                android:id="@+id/neg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:background="#ffffff"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageVasiew"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerVertical="false"
                    android:layout_marginRight="15dp"
                    android:padding="15dp"
                    app:srcCompat="@mipmap/almacen" />

                <TextView
                    android:id="@+id/nombrsde1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="false"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Negocio"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical">

                    <TextView
                        android:id="@+id/ir2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="right"
                        android:text=">"
                        android:textSize="30sp"
                        android:typeface="sans" />
                </RelativeLayout>

            </TableRow>

            <TableRow
                android:id="@+id/bz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:background="#ffffff"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imagaeView"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerVertical="false"
                    android:layout_marginRight="15dp"
                    android:padding="15dp"
                    app:srcCompat="@mipmap/bazar" />

                <TextView
                    android:id="@+id/nombrase1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="false"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Bazar"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical">

                    <TextView
                        android:id="@+id/ir3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="right"
                        android:text=">"
                        android:textSize="30sp"
                        android:typeface="sans" />
                </RelativeLayout>

            </TableRow>

            <TableRow
                android:id="@+id/fr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:background="#ffffff"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageVieaaw"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerVertical="false"
                    android:layout_marginRight="15dp"
                    android:padding="15dp"
                    app:srcCompat="@mipmap/peluqueria" />

                <TextView
                    android:id="@+id/nombreaa1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="false"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Peluquerias"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical">

                    <TextView
                        android:id="@+id/ir4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:gravity="right"
                        android:text=">"
                        android:textSize="30sp"
                        android:typeface="sans" />
                </RelativeLayout>

            </TableRow>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
